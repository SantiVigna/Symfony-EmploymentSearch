<header>
    <h1 class="title" id="title">Employment Search</h1>

    {% if app.user %}
        <div class="user-menu">
            <div class="user-info" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 0; position: absolute; top: 27px; right: 25px;">
                <span class="user-name" style="background-color: #003366; color: white; font-size: 0.7em; padding: 3px 6px; text-decoration: none; border-radius: 5px; font-weight: 600; font-family: Arial, sans-serif; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#004080'" onmouseout="this.style.backgroundColor='#003366'">{{ app.user.email }}</span>
                <a href="{{ path('app_logout') }}" style="background-color: #003366; color: white; font-size: 0.7em; padding: 3px 6px; text-decoration: none; border-radius: 5px; font-weight: 600; font-family: Arial, sans-serif; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#004080'" onmouseout="this.style.backgroundColor='#003366'">Logout</a>
            </div>
        </div>
    {% else %}
        <div class="auth-buttons" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 0; position: absolute; top: 27px; right: 25px;">
            <a href="{{ path('app_login')}}" class="btn btn-login" style="background-color: #003366; color: white; font-size: 0.7em; padding: 3px 6px; text-decoration: none; border-radius: 5px; font-weight: 600; font-family: Arial, sans-serif; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#004080'" onmouseout="this.style.backgroundColor='#003366'">Login</a>
            <a href="{{ path('app_register') }}" class="btn btn-register" style="background-color: #003366; color: white; font-size: 0.7em; padding: 3px 6px; text-decoration: none; border-radius: 5px; font-weight: 600; font-family: Arial, sans-serif; transition: background-color 0.3s;" onmouseover="this.style.backgroundColor='#004080'" onmouseout="this.style.backgroundColor='#003366'">Register</a>
        </div>
    {% endif %}
</header>