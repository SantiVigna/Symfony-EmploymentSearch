{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="font-sans">
        <div class="relative min-h-screen flex flex-col sm:justify-center items-center bg-gray-100 py-12">
            <div class="relative sm:max-w-lg w-full">
                <div class="card bg-blue-400 shadow-lg w-full h-full rounded-3xl absolute transform -rotate-6"></div>
                <div class="card bg-red-400 shadow-lg w-full h-full rounded-3xl absolute transform rotate-6"></div>
                <div class="relative w-full rounded-3xl px-10 py-8 bg-gray-100 shadow-md">
                    <label for="" class="block text-lg text-gray-700 text-center font-bold">
                        Registrate
                    </label>
                    {{ form_start(registrationForm, { attr: { class: 'mt-10' } }) }}
                        
                        <div class="mt-6">
                            {{ form_row(registrationForm.email, {
                                attr: { 
                                    class: 'mt-1 block w-full border-none bg-gray-100 h-14 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0 text-lg',
                                    placeholder: 'Correo electronico'
                                }
                            }) }}
                        </div>
            
                        <div class="mt-8">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Contraseña',
                                attr: { 
                                    class: 'mt-1 block w-full border-none bg-gray-100 h-14 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0 text-lg',
                                    placeholder: 'Contraseña'
                                }
                            }) }}
                        </div>

                        <div class="mt-8">
                            {{ form_row(registrationForm.agreeTerms, {
                                label: 'Acepto los términos y condiciones',
                                attr: { class: 'mt-1 block text-lg' }
                            }) }}
                        </div>
            
                        <div class="mt-8">
                            <button class="bg-blue-500 w-full py-4 rounded-xl text-white text-lg shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out transform hover:-translate-x hover:scale-105">
                                Registrar
                            </button>
                        </div>
            
                        <div class="mt-8">
                            <div class="flex justify-center items-center">
                                <label class="mr-2 text-lg">¿Ya tienes una cuenta?</label>
                                <a href="#" class="text-blue-500 text-lg transition duration-500 ease-in-out transform hover:-translate-x hover:scale-105">
                                    Iniciar sesion
                                </a>
                            </div>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

